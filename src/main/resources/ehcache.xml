<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd" updateCheck="false">

	<diskStore path="${java.io.tmpdir}/shopxx_cache" />

	<cache name="siteInfo" maxElementsInMemory="100" eternal="true" overflowToDisk="true" copyOnRead="true" />
	<cache name="product" maxElementsInMemory="1000" timeToIdleSeconds="3600" timeToLiveSeconds="86400" eternal="false" overflowToDisk="true" />
	<cache name="idiomList" maxElementsInMemory="1000" timeToIdleSeconds="3600" timeToLiveSeconds="86400" eternal="false" overflowToDisk="true" />

</ehcache>